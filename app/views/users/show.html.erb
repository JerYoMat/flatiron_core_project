<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
        <%= @user.username %>
        <%= @user.email%>

      
    </section>
  </aside>
  <div>
   <% if @user.tips.any? %>
      <h3>tips (<%= @user.tips.count %>)</h3>
      <ol class="tips">
        <%= render @tips %>
      </ol>
    <% end %>
    </div>
</div>