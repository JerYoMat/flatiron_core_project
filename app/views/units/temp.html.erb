<script>


$(document).ready(function() {
  var unit_images= {};
  unit_images["1"]='<%= asset_path('ruby_first.png') %>';
  
  $('#units_tab').click(function(evt) {
    evt.preventDefault();
       $.getJSON('/units/slider',"",processUnits);

    function processUnits(data) {
      let sliderHTML = ''
      sliderHTML += "<div class='container'><div class='row'><div class='MultiCarousel' data-items='1,3,5,6' data-slide='1' id='MultiCarousel'  data-interval='1000'>"
      sliderHTML += "<div class='MultiCarousel-inner'>"
      $.each(data,function(units, unit) {
        sliderHTML+= "<div id=" + unit.id + " class='item'>";
        sliderHTML+="<a href='/units/" + unit.id + "'>";
        sliderHTML+="<div class='card'>";
        sliderHTML+="<img src='" + unit_images['1'] + "'>";
        sliderHTML+="<div class='card-body'>";
        sliderHTML+="<p class='card-title'>" + unit.title +"</p>"
        
      }); // end of each()
      sliderHTML+="</div></div></a></div></div><button class='btn btn-primary leftLst'><</button><button class='btn btn-primary rightLst'>></button></div></div></div>"
  
      $('#test').html(sliderHTML);
      $('#test').listview('refresh')
      return false
    } // end processUnits
    return false;
  }); // end click
}); // end ready


</script>
