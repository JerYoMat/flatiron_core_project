class Topic {
  constructor(id, title, courseOrder, tips) {
    this.id = id;
    this.title = title;
    this.courseOrder = courseOrder;
    this.tips = tips
    this.formatTopic = this.formatTopic.bind(this)
  }
  formatTopic() {
    const bullet = document.createElement('li');
    bullet.className = "list-group-item"
    bullet.innerHTML = this.title;
    bullet.id = this.id;
    return bullet;
  }
}

class Tip {
  constructor(id, title, link, resource_type, time_requirement) {
    this.id = id;
    this.title = title;
    this.link = link;
    this.resource_type = resource_type;
    this.time_requirement = time_requirement;
  }
}




</script>

